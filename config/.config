CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_netgear_r6800=y

#
# Base system
#
CONFIG_PACKAGE_cgi-io=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_ubusd=y
CONFIG_PACKAGE_uhttpd=y

#
# PPPoE
#
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_ppp-mod-pppoe=y

#
# Wireless (mt76) + experimental features
#
CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_kmod-mt7603=y
CONFIG_PACKAGE_kmod-mt76x2=y
CONFIG_PACKAGE_kmod-mt7615e=y

# mt76 testmode + advanced knobs
CONFIG_PACKAGE_mt76-test=y
CONFIG_PACKAGE_mt76-full=y
CONFIG_MT76_LEDS=y
CONFIG_MT76_DEBUG=y
CONFIG_MT76_DEBUGFS=y
CONFIG_MT76_CONNAC=y
CONFIG_PACKAGE_wireless-tools=y

#
# LuCI (lightweight but feature-rich)
#
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl-openssl=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# Useful LuCI apps
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-proto-ppp=y

#
# Networking extras (minimal)
#
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y

#
# System utilities
#
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_ttyd=y

#
# Performance / optimizations
#
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_DEVEL=y
CONFIG_CCACHE=y

#
# Drop unnecessary packages
#
CONFIG_PACKAGE_wpad-basic-wolfssl=n
CONFIG_PACKAGE_wpad-basic-mbedtls=n
CONFIG_PACKAGE_wpad-openssl=y
