# Target
CONFIG_TARGET_BOARD=mt7621
CONFIG_TARGET_PROFILE=r6800
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_netgear_r6800=y

# Global build settings — enable experimental features
CONFIG_EXPERIMENTAL=y

# Base system
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_urandom-seed=y

# Networking / firewall / DHCP‑DNS
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_iptables=y
CONFIG_IPV6=y
CONFIG_PACKAGE_odhcpd-ipv6only=y

# Wireless / WiFi (patched mt76 assumed)
CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_wireless-tools=y

# SSH / remote admin
CONFIG_PACKAGE_dropbear=y

# Web UI
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# Utilities / package manager support
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_uclient-fetch=y

# Optional useful tools
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_curl=y
