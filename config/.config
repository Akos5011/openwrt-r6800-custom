# =================================================
# Target
# =================================================
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_netgear_r6800=y

# =================================================
# Kernel / Experimental (SAFE)
# =================================================
CONFIG_EXPERT=y
CONFIG_KERNEL_KALLSYMS=y
CONFIG_KERNEL_PRINTK=y
CONFIG_KERNEL_PROC_FS=y
CONFIG_KERNEL_SYSFS=y
CONFIG_KERNEL_FHANDLE=y
CONFIG_KERNEL_DEVTMPFS=y
CONFIG_KERNEL_DEVTMPFS_MOUNT=y

# =================================================
# Base system
# =================================================
CONFIG_PACKAGE_busybox=y
CONFIG_BUSYBOX_CUSTOM=n
CONFIG_PACKAGE_procd=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_ubusd=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_logd=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_rpcd-mod-uci=y
CONFIG_PACKAGE_rpcd-mod-file=y

# =================================================
# Networking Core
# =================================================
CONFIG_PACKAGE_ip-full=y
CONFIG_PACKAGE_ip-bridge=y
CONFIG_PACKAGE_ip-tiny=n
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_firewall4=y

# =================================================
# WAN / PPPoE
# =================================================
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_ppp-mod-pppoe=y
CONFIG_PACKAGE_kmod-ppp=y
CONFIG_PACKAGE_kmod-pppoe=y

# =================================================
# Wireless Core (mt76 â€“ FIXED)
# =================================================
CONFIG_PACKAGE_kmod-mac80211=y

CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_kmod-mt76-core=y
CONFIG_PACKAGE_kmod-mt76-connac=y
CONFIG_PACKAGE_kmod-mt7615-common=y
CONFIG_PACKAGE_kmod-mt7615e=y

CONFIG_PACKAGE_wireless-regdb=y

# mac80211 features
CONFIG_MAC80211_DEBUGFS=n
CONFIG_MAC80211_MESH=y
CONFIG_MAC80211_RC_DEFAULT_MINSTREL=y
CONFIG_MAC80211_RC_MINSTREL=y
CONFIG_MAC80211_RC_MINSTREL_HT=y

# =================================================
# Wireless Userspace (LuCI compatible)
# =================================================
CONFIG_PACKAGE_wpad-basic-mbedtls=y
CONFIG_PACKAGE_wpad-wolfssl=n

CONFIG_PACKAGE_iw=y
CONFIG_PACKAGE_iwinfo=y
CONFIG_PACKAGE_wireless-tools=y

# =================================================
# LuCI (FULL, STABLE)
# =================================================
CONFIG_PACKAGE_luci=y
CONFIG_LUCI_LANG_en=y

CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-mod-network=y
CONFIG_PACKAGE_luci-mod-status=y
CONFIG_PACKAGE_luci-mod-system=y

CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y

# Optional (disabled)
CONFIG_PACKAGE_luci-app-statistics=n
CONFIG_PACKAGE_luci-app-upnp=n
CONFIG_PACKAGE_luci-app-ddns=n

# =================================================
# Web UI backend
# =================================================
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_uhttpd-mod-ubus=y
CONFIG_PACKAGE_uhttpd-mod-lua=n

CONFIG_PACKAGE_luci-ssl-openssl=y
CONFIG_PACKAGE_luci-ssl=n

# =================================================
# SSL / libs
# =================================================
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_libubus=y
CONFIG_PACKAGE_libuci=y
CONFIG_PACKAGE_libjson-c=y

# =================================================
# Utilities
# =================================================
CONFIG_PACKAGE_htop=y

# =================================================
# USB (safe defaults)
# =================================================
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-storage=y

# =================================================
# Image
# =================================================
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_IMAGES_GZIP=y
