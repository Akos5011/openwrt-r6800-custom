--- a/mt7615/init.c
+++ b/mt7615/init.c
@@
-/* Original init settings */
-priv->mcu_calibrate = true;
+/* Aggressive: disable precalibration and force fast init */
+priv->mcu_calibrate = false;
+priv->mcu_fast_init = true;

--- a/mt7615/phy.c
+++ b/mt7615/phy.c
@@
-/* Original default TX power */
-priv->tx_power = MT_TX_PWR_DEFAULT;
+/* Aggressive: max TX power for best signal */
+priv->tx_power = MT_TX_PWR_MAX;

--- a/mt7615/mac.c
+++ b/mt7615/mac.c
@@
-/* Original aggregation settings */
-priv->agg_tx = true;
+/* Aggressive: maximize aggregation and reduce spacing */
+priv->agg_tx = true;
+priv->ampdu_max_len = 256; /* max A-MPDU size */
+priv->ampdu_min_spacing = 2; /* minimal spacing */
+
+/* Enable aggressive rate control */
+priv->aggr_rate_control = true;
+
+/* Increase RX buffer sizes for high throughput */
+priv->rx_ring_size = 2048;
+priv->tx_ring_size = 2048;
